{
  "name": "exotic-pets-api",
  "version": "1.0.0",
  "description": "Robust microservice for exotic pets ecommerce - OpenShift deployment",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docker:build": "docker build -t exotic-pets-api .",
    "docker:run": "docker run -p 8080:8080 exotic-pets-api",
    "openshift:deploy": "oc new-app . --name=exotic-pets-api",
    "openshift:build": "oc start-build exotic-pets-api --from-dir=."
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "elastic-apm-node": "^4.5.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "aws-sdk": "^2.1691.0",
    "pdfkit": "^0.14.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "exotic-pets",
    "ecommerce",
    "microservice",
    "openshift",
    "kubernetes",
    "nodejs",
    "mongodb",
    "redis"
  ],
  "author": "Exotic Pets Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/exotic-pets/api.git"
  }
}